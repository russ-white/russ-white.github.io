{
  "name": "@needle-tools/helper",
  "version": "0.2.1-pre",
  "scripts": {
    "tsc": "tsc",
    "dev": "npm-watch compile",
    "compile": "tsc & exit 1",
    "publish": "tsc && npm publish",
    "tool:install-packages": "node dist/install-package",
    "tool:kill-other-vite-processes": "node dist/stop-other-vite",
    "tool:update-packages": "node dist/update-package",
    "tool:copy-recursive": "node dist/copy-from-to",
    "tool:update-types-three" : "node dist/update-types-three"
  },
  "license": "ISC",
  "author": {
    "name": "Needle",
    "email": "help@needle.tools",
    "url": "https://needle.tools/"
  },
  "bugs": {
    "url": "https://github.com/needle-tools/needle-engine-tools/issues"
  },
  "homepage": "https://github.com/needle-tools/needle-engine-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/needle-tools/needle-engine-tools.git"
  },
  "dependencies": {
    "command-line-args": "^5.2.1",
    "find-process": "^1.4.7",
    "request": "^2.88.2",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/shelljs": "^0.8.11",
    "@types/command-line-args": "^5.2.0",
    "@types/node": "^18.7.18",
    "npm-watch": "^0.11.0",
    "typescript": "^4.8.4"
  },
  "watch": {
    "compile": {
      "patterns": [
        "src/**/*.ts"
      ],
      "ignore": "src/test.ts",
      "extensions": "ts",
      "quiet": false
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
