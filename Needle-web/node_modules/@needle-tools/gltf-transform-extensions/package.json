{
  "name": "@needle-tools/gltf-transform-extensions",
  "version": "0.10.3-pre",
  "description": "Contains Needle extension handling for glTF-transform",
  "main": "pack-gltf.mjs",
  "scripts": {
    "dev": "npm-watch compile",
    "transform:make-progressive": "node make-progressive.mjs",
    "transform:pack-gltf": "node --no-experimental-fetch pack-gltf.mjs",
    "pack-gltf": "node --no-experimental-fetch pack-gltf.mjs",
    "dev:pack-gltf": "npm run compile && node pack-gltf.mjs",
    "clear-caches": "node clear-caches.mjs",
    "compile": "tsc || exit 1"
  },
  "dependencies": {
    "@gltf-transform/core": "^2.5.1",
    "@gltf-transform/extensions": "^2.5.1",
    "@gltf-transform/functions": "^2.5.1",
    "@squoosh/lib": "^0.4.0",
    "command-exists": "^1.2.9",
    "command-line-args": "^5.2.1",
    "draco3dgltf": "^1.5.3",
    "glob": "^7.2.0",
    "meshoptimizer": "^0.18.1",
    "micromatch": "^4.0.5",
    "p-limit": "3.1.0",
    "semver": "^7.3.7",
    "tmp": "^0.2.1"
  },
  "watch": {
    "compile": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": false
    }
  },
  "devDependencies": {
    "@types/node": "^18.7.23",
    "npm-watch": "^0.11.0"
  },
  "author": {
    "name": "Needle",
    "email": "help@needle.tools",
    "url": "https://needle.tools/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/needle-tools/needle-gltf-extensions.git"
  }
}
